<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HrManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HrManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Google Font (optional for modern look) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    
    
</head>
<body>
    <header>
        <!-- Title centered at top -->
        @* <div class="text-center py-3 bg-white border-bottom box-shadow ">
            <h1 class="fw-bold mb-0" style="font-size: 2rem;">HR Management System</h1>
        </div> *@
        <!-- Title Section -->
        <div class="text-center py-4 bg-light border-bottom shadow-sm">
            <h1 class="fw-bold mb-0" style="font-family: 'Poppins', sans-serif; font-size: 2.5rem; letter-spacing: 1px; color: #198754;">
                <i class="fas fa-briefcase me-2"></i> HR Management System
            </h1>
            @* <div style="width: 150px; height: 4px; background: linear-gradient(to right, #198754, #0d6efd); margin: 10px auto 0 auto; border-radius: 2px;"></div> *@
        </div>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HrManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> *@
             


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-wrap justify-content-center text-center">
                        @* <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-user-shield"></i> Privacy
                            </a>
                        </li> *@
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Company" asp-action="Index">
                                <i class="fas fa-building"></i> Company
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Department" asp-action="Index">
                                <i class="fas fa-sitemap"></i> Department
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Designation" asp-action="Index">
                                <i class="fas fa-id-badge"></i> Designation
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Shift" asp-action="Index">
                                <i class="fas fa-clock"></i> Shift
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Employee" asp-action="Index">
                                <i class="fas fa-users"></i> Employee
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Attendance" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Attendance
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="AttendanceSummary" asp-action="Index">
                                <i class="fas fa-chart-bar"></i> Attendance Summary
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Salary" asp-action="Index">
                                <i class="fas fa-money-bill-wave"></i> Salary
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Report" asp-action="EmployeeListTabulator">
                                <i class="fas fa-list"></i> Employee List
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Report" asp-action="AttendanceTabulator">
                                <i class="fas fa-table"></i> Attendance Report
                            </a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="btn btn-success" asp-area="" asp-controller="Report" asp-action="SalaryTabulator">
                                <i class="fas fa-file-invoice-dollar"></i> Salary Report
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()

            @* @Html.Partial("_Notification") *@

        </main>
    </div>

    <footer class="border-top footer text-muted">
        @* <div class="container">
            &copy; 2025 - HrManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div> *@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

   @*  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
